<Page
    x:Class="RPGproject.Source.UserData.Screens.CreatedCharactersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:RPGproject.Source.CharacterCreation"
    xmlns:reference="using:RPGproject.Source.UserData.Screens"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <GridView ItemsSource="{x:Bind Characters}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:Character">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock FontSize="36" Text="{x:Bind FirstDescription}" HorizontalAlignment="Center"/>
                        <TextBlock FontSize="24" Text="{x:Bind SecondDescription}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        

    </Grid>
</Page>
