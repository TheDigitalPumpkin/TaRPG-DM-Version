        <Button Content="Back" FontSize="24" Style="{StaticResource CustomButton}" Background="DarkRed" Margin="30,43,0,0" VerticalAlignment="Top" Height="40" Width="124" Click="BackButton_Click"/>
        <Button Content="Edit character" FontSize="36" Background="DarkRed" Style="{StaticResource CustomButton}" Margin="0,500,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="85" Width="338" Click="EditCharacter_Click"/>
        <Button Content="Delete character" FontSize="36" Margin="0,700,0,0" Style="{StaticResource CustomButton}" Background="DarkRed" VerticalAlignment="Center" HorizontalAlignment="Center" Height="85" Width="338" Click="DeleteCharacter_Click"/>
    </Grid>
