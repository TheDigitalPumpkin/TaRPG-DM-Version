        <TextBlock x:Name="CharacterWeight" HorizontalAlignment="Left" Margin="195,555,0,0" Text="" FontSize="45" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="StrengthAtt" Margin="150,250,0,0" HorizontalAlignment="Center" Text="" FontSize="45"/>
        <TextBlock x:Name="DexterityAtt" Margin="160,310,0,0" HorizontalAlignment="Center" Text="" FontSize="45"/>
