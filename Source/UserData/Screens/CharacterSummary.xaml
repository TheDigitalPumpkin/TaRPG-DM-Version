        <TextBlock HorizontalAlignment="Left" Margin="50,255,0,0" Text="Name:" FontSize="45" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,315,0,0" Text="Age:" FontSize="45" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,375,0,0" Text="Race:" FontSize="45" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,435,0,0" Text="Class:" FontSize="45" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,495,0,0" Text="Height:" FontSize="45" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,555,0,0" Text="Weight:" FontSize="45" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="395,170,0,0" Text="Attributes and modifiers:" FontSize="60" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="-440,121,0,0" TextWrapping="Wrap" Text="|" FontSize="250" VerticalAlignment="Top" Height="354"/>
        <TextBlock HorizontalAlignment="Center" Margin="-440,370,0,0" TextWrapping="Wrap" Text="|" FontSize="250" VerticalAlignment="Top" Height="354"/>
