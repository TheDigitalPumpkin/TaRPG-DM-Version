        <Button Content="View created characters" Margin="0,720,0,0" Windows10version1809:CornerRadius="12" Style="{StaticResource CustomButton}" BorderBrush="Black" BorderThickness="7" Background="DarkRed" Height="146" Width="837" FontSize="60" VerticalAlignment="Top" HorizontalAlignment="Center" Click="ViewCreatedCharacters"/>

    </Grid>
